[Unit]
Description=Hytale Server Backup Service
After=hytale.service

[Service]
Type=oneshot
User=hytale
Group=hytale
WorkingDirectory=/opt/hytale
ExecStart=/opt/hytale/scripts/backup.sh create

# Timeout pour les gros backups
TimeoutStartSec=600

# Sécurité
PrivateTmp=true
NoNewPrivileges=true
ProtectSystem=strict
ReadWritePaths=/opt/hytale

# Journalisation
StandardOutput=journal
StandardError=journal
SyslogIdentifier=hytale-backup
